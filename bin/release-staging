#!/bin/sh

build_dir=_build/prod/rel/a_trading_system

relative_dir="staging-$(date -u -Iminutes)"
release_dir="/srv/a-trading-system/releases/${relative_dir}"

mkdir -p "${release_dir}/etc/"
cp -a "${build_dir}/." "$release_dir"
cp /etc/a-trading-system/environment-staging "${release_dir}/etc/environment"
rm -f /srv/a-trading-system/staging
ln -sf "releases/$relative_dir" /srv/a-trading-system/staging

