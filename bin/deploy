#!/bin/sh

work_tree=/var/cache/a_trading_system
relative_dir="$(date -u -Iminutes)"
release_dir="/srv/a-trading-system/releases/${relative_dir}"

mkdir -p "${release_dir}/etc/"
cp -r "${work_tree}/_build/prod/rel/a_trading_system/" "$release_dir"
cp /etc/a-trading-system/environment-production "${release_dir}/etc/environment"
ln -sf "$relative_dir" /srv/a-trading-system/current

sudo /bin/systemctl restart a-trading-system

